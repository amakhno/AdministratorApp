@model AdministratorNegotiating.Models.MeetingRoom
@{
    ViewBag.Title = "Создание переговорный";
}
<h2>Создание</h2>
<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm("Create", "MeetingRoom", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <hr />
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CountOfChairs, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.CountOfChairs, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.CountOfChairs, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.IsProjector)
                            @Html.LabelFor(m => m.IsProjector)
                        </div>
                    </div>
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.IsBoard)
                            @Html.LabelFor(m => m.IsBoard)
                        </div>
                    </div>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Отмена", "Index",null,new { @class="btn btn-default"} )
                        <input type="submit" value="Создать переговорную" class="btn btn-primary" />
                    </div>
                </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
